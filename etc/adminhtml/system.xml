<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="WindAndeddu_livechat" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>LiveChat</label>
            <tab>service</tab>
            <resource>WindAndeddu_LiveChat::config_livechat</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>
                <field id="enabled" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="license" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>License</label>
                </field>

                <field id="group_id" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Group ID</label>
                </field>
            </group>
        </section>
    </system>
</config>
